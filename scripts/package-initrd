#!/bin/bash
set -e

cd $(dirname $0)/..

BUILD=$(pwd)/build
INITRD_DIR=${BUILD}/initrd
ARTIFACTS=$(pwd)/dist/artifacts

source scripts/version

mkdir -p ${ARTIFACTS}

if [ ! -f ${ARTIFACTS}/vmlinuz-${KERNEL_VERSION} ]; then
    exit 0
fi

if [ "$COMPRESS" == "" ]; then
    COMPRESS="gzip -1"
fi

cd ${INITRD_DIR}

echo Creating ${INITRD}
find | cpio -H newc -o | ${COMPRESS} > ${INITRD}
echo Done creating ${INITRD}
