#!/bin/bash
# help: Run integration tests
set -e

if [ "$INTEGRATION_TESTS" = 0 ]; then
    exit 0
fi

source $(dirname $0)/version

cd $(dirname $0)/../tests

if [ ! -e ../dist/artifacts/initrd ]; then
    ../scripts/dev
fi

if [ "$RUNTEST" != "" ]; then
	RUNTEST="-check.f ${RUNTEST}"
fi

go test -v -check.vv -timeout 9999m $RUNTEST
