#!/bin/bash
# help: Run go unit tests
set -e

cd $(dirname $0)/..

echo Running tests

PACKAGES=". $(find -name '*.go' | xargs -I{} dirname {} |  cut -f2 -d/ | sort -u | grep -Ev '(^\.$|.git|.trash-cache|vendor|bin|tests)' | sed -e 's!^!./!' -e 's!$!/...!')"

if [ "$ARCH" = "amd64" ]; then
    RACE="-race"
fi
go test -v -check.vv $RACE -cover -tags=test ${PACKAGES}
